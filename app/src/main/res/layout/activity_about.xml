<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.app.smartpos.about.AboutActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo_codemize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:padding="5dp"
        android:fontFamily="@font/georgiab"
        android:text="Restaurant\nManagement\nSystem"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sailec_regular"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="Restaurant Management System is a Smart Solution for your restaurant. Manage your daily sales smartly using this app."
        android:textColor="@color/transparent_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:autoLink="web"
        android:fontFamily="@font/sailec_regular"
        android:gravity="center"
        android:text="www.muhammadtalhasultan.com" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:autoLink="email"
        android:fontFamily="@font/sailec_regular"
        android:gravity="center"
        android:text="maliktalha0101@gmail.com" />



</LinearLayout>

